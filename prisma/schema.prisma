generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
url = "file:./dev.db"
}

model WalletContract  {
  id  Int     @id  @default(autoincrement())
  walletAddress String
  contractAddress String
  createdAt DateTime  @default(now())
}

model Payment {
  id  Int @id @default(autoincrement())
  amount  Float
  paidAt  DateTime
  contractAddress String
  walletAddress String
  attestation String
}
